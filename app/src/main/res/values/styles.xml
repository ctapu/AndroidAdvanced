<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Fonts styles -->
    <style name="RalewayRegular">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RalewayRegular16" parent="RalewayRegular">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RalewayBold">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RalewayBold16" parent="RalewayBold">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- End of fonts styles -->

    <!-- Edit text styles -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">@dimen/edit_text_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_width">@dimen/edit_text_width</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">@dimen/edit_text_text_padding</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>
    <!-- End of edit text style -->

    <!-- Text view styles -->
    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">RalewayBold16</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/text_view_padding</item>
    </style>
    <!-- End of text view styles -->

    <!-- Button styles -->
    <style name="RoundedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">@dimen/text_view_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/raleway_bold</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>
    <!-- End of button styles -->


</resources>